@model BL.Services.Common.Model.AccountReportModel

@{
    ViewBag.Title = "AccountReport";
}

<h2>AccountReport</h2>

<p>@Html.ActionLink("Go to bank page", "Index") @*| @Html.ActionLink("Go to transaction report page", "DayTransactionsReport") | @Html.ActionLink("Go to previous day transaction report page", "PreviousDayTransactionsReport")*@</p>

<h3>Development Fund Account</h3>
<table class="table">
    <tr>
        <th>
            @("Account Id")
        </th>
        <th>
            @("Account Number")
        </th>
        <th>
            @("Debit")
        </th>
        <th>
            @("Credit")
        </th>
        <th>
            @("Balance")
        </th>
    </tr>
    <tr>
        <td>
            @Html.DisplayFor(model => model.DevelopmentFundAccount.Id)
        </td>
        <td>
            @Html.DisplayFor(model => model.DevelopmentFundAccount.AccountNumber)
        </td>
        <td>
            @Html.DisplayFor(model => model.DevelopmentFundAccount.DebitValue)
        </td>
        <td>
            @Html.DisplayFor(model => model.DevelopmentFundAccount.CreditValue)
        </td>
        <td>
            @Html.DisplayFor(model => model.DevelopmentFundAccount.Balance)
        </td>
    </tr>
</table>
